<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.encuesta.Gracias" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="23dp"
        android:text="شكراً "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/red"
        android:layout_alignBottom="@+id/red"
        android:layout_alignRight="@+id/selected"
        android:onClick="exp1_2"
        android:tag="green"
        android:text="أخضر" />

    <TextView
        android:id="@+id/aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selected"
        android:layout_below="@+id/selected"
        android:layout_marginTop="27dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

   
    <ImageView
        android:id="@+id/exp_selected"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="81dp"
        android:src="@drawable/experiment_selected_for_payment"></ImageView>

    <TextView
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/exp_selected"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aux"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/green"
        android:onClick="exp1_2"
        android:tag="red"
        android:text="أحمر" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exp_selected"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="50dp"
        android:onClick="random"
        android:text="Continue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/green"
        android:layout_alignTop="@+id/exp_pago"
        android:text="Select experiment for payment"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/exp_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="37dp"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/aux"
        android:layout_alignBottom="@+id/aux"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:onClick="continuar"
        android:text="Continue" />

    <TextView
        android:id="@+id/texto7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/green"
        android:layout_below="@+id/green"
        android:text="Experiment 7 will also be payed later."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/pay1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/texto7"
        android:layout_marginLeft="86dp"
        android:layout_toRightOf="@+id/exp_selected"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>